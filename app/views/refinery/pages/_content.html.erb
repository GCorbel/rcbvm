<div class="row">
  <div class="span3">
    <div class="well">
      <ul class="nav nav-pills nav-stacked">
        <% Refinery::News::Item.all.each do |item| %>
          <li>
            <%= link_to item.title, news_item_path(item) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="span9">
    <div class="well">
      <div class="editable-long-text" data-object="pages" data-id="<%= @page.id %>" data-attribute="body">
        <%= raw @page.content_for(:body) %>
      </div>
    </div>
    <% if @page.images.any? %>
      <div class="well">
        <div id="myCarousel" class="carousel slide">
          <!-- Carousel items -->
          <div class="carousel-inner">
            <% @page.images.each_with_index do |image, i| %>
              <% classes = ["item"] %>
              <% classes << "active" if i == 0 %>
              <div class="<%= classes.join(' ') %>">
                <%= image_tag image.thumbnail("200x600").url %>
              </div>
            <% end %>
          </div>
          <!-- Carousel nav -->
          <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
          <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
